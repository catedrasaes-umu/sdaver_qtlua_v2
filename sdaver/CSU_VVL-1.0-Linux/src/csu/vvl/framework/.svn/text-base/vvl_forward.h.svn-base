#ifndef VVL_FORWARD_H
#define VVL_FORWARD_H

#include <iostream>

#include <boost/shared_ptr.hpp>
#include <list>


namespace csu {
namespace vvl {
namespace framework {

    ///
    /// forward declarations
    ///

    class VerificationContext;
    typedef boost::shared_ptr<VerificationContext> VerificationContextPtr;

    class RuleManager;
    typedef boost::shared_ptr<RuleManager> RuleManagerPtr;

    class RuleLinker;
    typedef boost::shared_ptr<RuleLinker> RuleLinkerPtr;

    class Rule;
    typedef boost::shared_ptr<Rule> RulePtr;
    typedef std::list<RulePtr> RuleList;

    class GenericElementAbstractor;
    typedef boost::shared_ptr<GenericElementAbstractor> GenericElementAbstractorPtr;

    class GenericElementRegistrar;
    typedef boost::shared_ptr<GenericElementRegistrar> GenericElementRegistrarPtr;

    class GenericVerificationEngine;
    typedef boost::shared_ptr<GenericVerificationEngine> GenericVerificationEnginePtr;

    class GenericEventAbstractor;
    typedef boost::shared_ptr<GenericEventAbstractor> GenericEventAbstractorPtr;

    class LogManager;
    typedef boost::shared_ptr<LogManager> LogManagerPtr;

    class GenericGuiInterventor;
    typedef boost::shared_ptr<GenericGuiInterventor> GenericGuiInterventorPtr;

    class VerificationResult;
    typedef boost::shared_ptr<VerificationResult> VerificationResultPtr;

    class GenericAbstractionResult;


} //framework
} //validation
} //csu


#endif // VVL_FORWARD_H
